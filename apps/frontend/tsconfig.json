{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Modules

    // Emit
    "noEmit": true,

    // Language and Environment
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],

    // Paths
    "rootDir": "./src",
    "baseUrl": "./",

    // Misc
    "jsx": "react-jsx",
    "paths": {
      "pages/*": ["./src/pages/*"],
      "components/*": ["./src/components/*"]
    }
  },
  "include": ["src/"]
}
